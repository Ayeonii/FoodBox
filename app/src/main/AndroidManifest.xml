<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dldke.foodbox">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".Activity.LoginActivity" android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".Activity.RefrigeratorMainActivity" />
        <activity android:name=".Activity.JoinActivity" android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".Activity.FullRecipeActivity" />
        <activity android:name=".Activity.RefrigeratorInsideActivity" />
        <activity android:name=".Activity.HalfRecipeActivity"/>
        <activity android:name=".Activity.PencilRecipeActivity" android:windowSoftInputMode="adjustNothing"/>

        <service android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService" android:enabled="true" />
    </application>

</manifest>