<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_back"
            android:background="@drawable/refrigerator"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btn_join"
            android:text="join"
            android:layout_alignRight="@+id/login_back"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btn_login"
            android:text="login"
            android:layout_below="@+id/btn_join"
            android:layout_alignRight="@+id/login_back"
            android:layout_marginRight="30dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_box"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="110dp"
            android:layout_marginRight="10dp"
            android:visibility="invisible">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_box"
                android:id="@+id/login_box_img"/>

            <EditText
                android:id="@+id/id_text"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:hint="ID" />

            <EditText
                android:id="@+id/pw_text"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/id_text"
                android:layout_marginLeft="20dp"
                android:inputType="textPassword"
                android:hint="Password" />

            <Button
                android:id="@+id/ok_btn"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_below="@+id/pw_text"
                android:layout_marginLeft="20dp"
                android:background="#FFFFFF"
                android:text="Login" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>