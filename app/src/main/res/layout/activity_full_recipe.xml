<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FullRecipeActivity">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="68dp"
        android:layout_marginStart="8dp"
        android:backgroud="?attr/actionModeCloseDrawable"
        android:background="?attr/actionModeCloseDrawable"
        app:layout_constraintEnd_toStartOf="@+id/fullrecipe_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fullrecipe_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="130dp"
        android:text="Full Recipe"
        android:textSize="25dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/ingredient_add"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="재료 선택하기"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_btn"/>

    <Button
        android:id="@+id/get_recipe"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="간이레시피 가져오기"
        app:layout_constraintLeft_toRightOf="@+id/ingredient_add"
        app:layout_constraintTop_toBottomOf="@+id/fullrecipe_title"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_horizontal_list"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_add"/>

    <TextView
        android:id="@+id/fullrecipe_subtitle"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="풀레시피"
        android:textSize="18dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_horizontal_list"/>

    <Button
        android:id="@+id/button_main_insert"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="데이터 추가"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_horizontal_list"
        app:layout_constraintLeft_toRightOf="@+id/fullrecipe_subtitle"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_main_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="10dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/fullrecipe_subtitle"
        app:layout_constraintBottom_toTopOf="@+id/recipe_ok"
        app:layout_constraintVertical_weight="9"/>

    <Button
        android:id="@+id/recipe_ok"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="작성 완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_main_list"
        app:layout_constraintVertical_weight="1"/>

</android.support.constraint.ConstraintLayout>