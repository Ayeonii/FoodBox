<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FullRecipeActivity">

    <TextView
        android:id="@+id/fullrecipe_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Full Recipe"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal"/>

    <Button
        android:id="@+id/ingredient_add"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="재료 추가하기"
        app:layout_constraintTop_toBottomOf="@+id/fullrecipe_title"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview_horizontal_list"
        app:layout_constraintVertical_bias="0.0"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_horizontal_list"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_add"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview_main_list"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_main_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="10dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_horizontal_list"
        app:layout_constraintBottom_toTopOf="@+id/button_main_insert"
        app:layout_constraintVertical_weight="9"/>

    <Button
        android:id="@+id/button_main_insert"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="데이터 추가"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_main_list"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>