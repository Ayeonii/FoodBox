<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fridgerator_background"
    app:ignore="NamespaceTypo">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:elevation="6dp"
        android:src="@drawable/min"
        fab:backgroundTint="@color/colorPrimary"
        fab:elevation="12dp"
        fab:layout_constraintBottom_toBottomOf="parent"
        fab:layout_constraintStart_toStartOf="parent"
        fab:pressedTranslationZ="12dp" />

    <RelativeLayout
        android:id="@+id/minusLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/translucent_background"
        android:visibility="gone"
        android:elevation="5dp"
       >

        <LinearLayout
            android:id="@+id/fullLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            fab:layout_constraintBottom_toBottomOf="parent"
            fab:layout_constraintStart_toStartOf="parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabFull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginBottom="100dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:elevation="12dp"
                android:src="@drawable/fullrecipe"
                fab:backgroundTint="@color/colorPrimary"
                fab:elevation="10dp"
                fab:pressedTranslationZ="12dp" />

            <TextView
                android:id="@+id/fullText"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:text="풀 레시피"
                android:textColor="@android:color/white"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/miniLayout"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="8dp"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            fab:layout_constraintBottom_toBottomOf="parent"
            fab:layout_constraintStart_toStartOf="parent">


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabMini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginBottom="180dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:elevation="12dp"

                android:src="@drawable/mini_recipe"
                fab:elevation="10dp"
                fab:pressedTranslationZ="12dp" />

            <TextView
                android:id="@+id/miniText"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="간이 레시피"
                android:textColor="@android:color/white"
                android:textSize="14sp" />


        </LinearLayout>

    </RelativeLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="12dp"
        android:src="@drawable/add"
        fab:backgroundTint="@color/colorPrimary"
        fab:elevation="10dp"
        fab:layout_constraintBottom_toBottomOf="parent"
        fab:layout_constraintEnd_toEndOf="parent"
        fab:pressedTranslationZ="12dp" />

    <RelativeLayout
        android:id="@+id/plusLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/translucent_background"
        android:visibility="gone"
        android:elevation="5dp">

        <LinearLayout
            android:id="@+id/cameraLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            fab:layout_constraintBottom_toBottomOf="parent"
            fab:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/cameraText"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:elevation="10dp"
                android:text="카메라 입력"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="100dp"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:elevation="12dp"
                android:src="@drawable/camera"
                fab:backgroundTint="@color/colorPrimary"

                fab:elevation="10dp"
                fab:pressedTranslationZ="12dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/pencilLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="8dp"
            android:elevation="12dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            fab:layout_constraintBottom_toBottomOf="parent"
            fab:layout_constraintEnd_toEndOf="parent">


            <TextView
                android:id="@+id/pencilText"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="직접 입력"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabPencil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="180dp"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:elevation="6dp"
                android:src="@drawable/pencil"
                fab:backgroundTint="@color/colorPrimary"
                fab:elevation="10dp"
                fab:pressedTranslationZ="12dp" />


        </LinearLayout>
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/leftButton"
            android:layout_width="192dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:background="#00000000"
            android:elevation="0dp"
            fab:layout_constraintBottom_toBottomOf="parent"
            fab:layout_constraintEnd_toEndOf="parent"
            fab:layout_constraintHorizontal_bias="0.0"
            fab:layout_constraintStart_toStartOf="parent"
            fab:layout_constraintTop_toTopOf="parent"
            fab:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/rightButton"
            android:layout_width="190dp"
            android:layout_height="0dp"
            android:background="#00000000"
            android:elevation="0dp"
            fab:layout_constraintBottom_toBottomOf="parent"
            fab:layout_constraintEnd_toEndOf="parent"
            fab:layout_constraintHorizontal_bias="0.0"
            fab:layout_constraintStart_toEndOf="@+id/leftButton"
            fab:layout_constraintTop_toTopOf="parent"
            fab:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:elevation="5dp"
            fab:layout_constraintEnd_toEndOf="parent"
            fab:layout_constraintHorizontal_bias="1.0"
            fab:layout_constraintStart_toStartOf="parent"
            fab:layout_constraintTop_toTopOf="@+id/rightButton"
            fab:srcCompat="@drawable/menu" />

        <ImageView
            android:id="@+id/postit"
            android:layout_width="162dp"
            android:layout_height="157dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:elevation="3dp"
            fab:layout_constraintEnd_toEndOf="parent"
            fab:layout_constraintHorizontal_bias="1.0"
            fab:layout_constraintStart_toStartOf="parent"
            fab:layout_constraintTop_toBottomOf="@+id/menu"
            fab:srcCompat="@drawable/post" />

        <TextView
            android:id="@+id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:elevation="10dp"
            android:text="유통기한 임박!"
            android:textSize="16sp"
            android:textStyle="bold"
            fab:layout_constraintEnd_toEndOf="@+id/postit"
            fab:layout_constraintHorizontal_bias="0.391"
            fab:layout_constraintStart_toStartOf="@+id/postit"
            fab:layout_constraintTop_toTopOf="@+id/postit" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:elevation="10dp"
            android:text="계란 -3일"
            fab:layout_constraintEnd_toEndOf="@+id/postit"
            fab:layout_constraintHorizontal_bias="0.45"
            fab:layout_constraintStart_toStartOf="@+id/postit"
            fab:layout_constraintTop_toBottomOf="@+id/durationText" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:elevation="10dp"
            android:text="우유 -2일"
            fab:layout_constraintEnd_toEndOf="@+id/postit"
            fab:layout_constraintHorizontal_bias="0.443"
            fab:layout_constraintStart_toStartOf="@+id/postit"
            fab:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:elevation="10dp"
            android:text="케첩 -4일"
            fab:layout_constraintEnd_toEndOf="@+id/postit"
            fab:layout_constraintHorizontal_bias="0.443"
            fab:layout_constraintStart_toStartOf="@+id/postit"
            fab:layout_constraintTop_toBottomOf="@+id/textView3" />


    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/transparentBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent_background"
        android:elevation="10dp"
        android:gravity="right"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/optionPage"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/colorPrimary"
            android:orientation="vertical">


            <ListView
                android:id="@+id/optionList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>

